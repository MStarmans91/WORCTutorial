<tool id="MMDPreprocess" name="MMDPreprocess" version="1.0">
    <description>Segmentation toolbox.</description>
    <authors>
      <author name="Martijn Starmans" email="m.starmans@erasmusmc.nl" url="http://www.bigr.nl/people/MartijnStarmans" />
    </authors>
  <command version="1.0" url="" >
    <targets>
      <target os="*" arch="*" interpreter="python" paths='bin/' bin="MMDPreprocess_tool.py" />
    </targets>
    <description>
       MMDPreprocess.py image_in image_out segmentation_out
       output = Image converted to nifti and a segmentation
    </description>
    <authors>
      <author name="Martijn Starmans" email="m.starmans@erasmusmc.nl" url="http://www.bigr.nl/people/MartijnStarmans" />
    </authors>
  </command>
  <repository />
  <interface>
    <inputs>
        <input id="image_in" name="image" datatype="DicomImageDirectory" prefix="--im_in" cardinality="1" repeat_prefix="true" required="true" />
     </inputs>
    <outputs>
      <output id="image_out" name="Output image" datatype="ITKImageFile" cardinality="as:image_in" nospace="true" order="0" prefix="--im_out" required="true"/>
      <output id="segmentation_out" name="Output segmentation" datatype="ITKImageFile" cardinality="as:image_in" nospace="true" order="0" prefix="--seg_out" required="true"/>
    </outputs>
  </interface>
  <requirements />
  <tests />
  <help> usage: MMDPreprocess.py [-h] -im IMAGE_IN.DCMFOLDER -im_out IMAGE_OUT.ITKIM -seg_out SEGMENTATION.ITKIM
        Convert a DICOM folder to a ITK image and a segmentation of the image based on thresholding.
  </help>
  <cite>
  </cite>
  <references />
</tool>
